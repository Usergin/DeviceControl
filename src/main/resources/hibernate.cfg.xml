<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>

    <session-factory>
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/mydb</property>
        <property name="hibernate.connection.requireSSL">false</property>
        <property name="hibernate.connection.verifyServerCertificate">false</property>
        <property name="hibernate.connection.autocommit">true</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>
        <property name="hibernate.connection.password">root</property>
        <property name="hibernate.connection.username">root</property>
        <!--<property name="hibernate.dbcp.initialSize">8</property>-->
        <!--<property name="hibernate.dbcp.maxActive">20</property>-->
        <!--<property name="hibernate.dbcp.maxIdle">20</property>-->
        <!--<property name="hibernate.dbcp.minIdle">0</property>-->
        <property name="show_sql">true</property>
        <!--<property name="hbm2ddl.auto">create</property>-->
        <mapping class="com.shiz.dao.DeviceEntity"/>
        <mapping class="com.shiz.dao.AppEntity"/>
        <!--<mapping class="com.shiz.dao.BatteryStatusEntity"/>-->
        <!--<mapping class="com.shiz.dao.CallEntity"/>-->
        <!--<mapping class="com.shiz.dao.DeviceStatusEntity"/>-->
        <!--<mapping class="com.shiz.dao.InformationEntity"/>-->
        <!--<mapping class="com.shiz.dao.LocationEntity"/>-->
        <!--<mapping class="com.shiz.dao.MessageEntity"/>-->
        <!--<mapping class="com.shiz.dao.NetworkStatusEntity"/>-->
        <mapping class="com.shiz.dao.SettingsEntity"/>
        <!--<mapping class="com.shiz.dao.TelephoneBookEntity"/>-->
